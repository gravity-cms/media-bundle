<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Gravity\MediaBundle\Entity\Classification\Category" table="media_category">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <one-to-many target-entity="Gravity\MediaBundle\Entity\Classification\Category" field="children"
                     mapped-by="parent"/>
        <many-to-one target-entity="Gravity\MediaBundle\Entity\Classification\Category" field="parent"
                     inversed-by="children"/>

        <many-to-one target-entity="Gravity\MediaBundle\Entity\Media" field="media" />

        <many-to-one target-entity="Gravity\MediaBundle\Entity\Classification\Context" field="context" />
    </entity>

</doctrine-mapping>
